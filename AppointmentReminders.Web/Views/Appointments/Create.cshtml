@model AppointmentReminders.Web.Models.Appointment

<div class="page-header">
    <h1>New Appointment</h1>
</div>

@using (Html.BeginForm("Create", "Appointments", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Name, new {@class = "control-label col-lg-2"})
        <div class="col-lg-10">
            @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.PhoneNumber, new {@class = "control-label col-lg-2"})
        <div class="col-lg-10">
            @Html.TextBoxFor(x => x.PhoneNumber, new {@class = "form-control"})
            @Html.ValidationMessageFor(x => x.PhoneNumber)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-lg-2">Time and Date</label>
        <div class="col-lg-10">
            <div class="row">
                <div class="col-lg-6">
                    &nbsp;
                </div>
                <div class="col-lg-6 pull-right">
                    @Html.DropDownListFor(x => x.Timezone, (IEnumerable<SelectListItem>) ViewBag.Timezones, new {@class = "form -control"})
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <input type="submit" value="Create Appointment" class="btn btn-primary"/>
            @Html.ActionLink("Cancel", "Index", new { Controller = "Appointments" }, new { @class = "btn btn-default" })
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/form")
}